generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model BudgetConfig {
  syncId       String @id @unique
  name         String @unique
  originalName String

  e2ePassword    String?
  lastImportedAt DateTime?

  mappedTransactions MappedTransaction[]
  mappedAccounts     MappedAccount[]
}

model MappedTransaction {
  moneyMoneyId String   @id @unique
  actualId     String
  createdAt    DateTime @default(now())

  budget       BudgetConfig? @relation(fields: [budgetSyncId], references: [syncId])
  budgetSyncId String?
}

model MappedAccount {
  moneyMoneyId String   @id @unique
  actualId     String?
  createdAt    DateTime @default(now())

  budget       BudgetConfig? @relation(fields: [budgetSyncId], references: [syncId])
  budgetSyncId String?
}

model Config {
  id Int @id @default(autoincrement())

  actualServerUrl      String
  actualServerPassword String
  openAIApiKey         String?

  userToken String?

  updatedAt DateTime @updatedAt
}
