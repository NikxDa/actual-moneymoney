{
    "name": "actual-moneymoney",
    "version": "0.1.0",
    "description": "An importer for syncing MoneyMoney accounts and transactions to Actual.",
    "exports": "./index.js",
    "scripts": {
        "build": "npx tsc",
        "ci:local": "npm run lint:eslint && npm run lint:complexity && npm run lint:prettier && npm run typecheck && npm run build && npm test",
        "typecheck": "tsc --noEmit -p tsconfig.json",
        "start": "node dist/index.js",
        "lint:eslint": "node --loader ts-node/esm ./node_modules/eslint/bin/eslint.js .",
        "lint:complexity": "ENABLE_COMPLEXITY_RULES=true node --loader ts-node/esm ./node_modules/eslint/bin/eslint.js .",
        "lint:prettier": "prettier --check .",
        "lint:prettier:fix": "prettier --write .",
        "prepare": "husky",
        "test": "vitest run"
    },
    "type": "module",
    "keywords": [
        "actual",
        "moneymoney",
        "finance",
        "budget",
        "sync",
        "import",
        "importer"
    ],
    "bin": {
        "actual-monmon": "./dist/index.js"
    },
    "files": [
        "dist"
    ],
    "author": "NikxDa",
    "license": "MIT",
    "dependencies": {
        "@actual-app/api": "^25.9.0",
        "chalk": "^5.6.2",
        "date-fns": "^4.1.0",
        "moneymoney": "^1.2.1",
        "openai": "^5.23.0",
        "toml": "^3.0.0",
        "yargs": "^18.0.0",
        "zod": "^3.25.76"
    },
    "engines": {
        "node": ">=20.9.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^20.0.0",
        "@commitlint/config-conventional": "^20.0.0",
        "@eslint/js": "^9.36.0",
        "@types/yargs": "^17.0.33",
        "eslint": "^9.36.0",
        "globals": "^16.4.0",
        "eslint-plugin-sonarjs": "^3.0.5",
        "husky": "^9.1.7",
        "prettier": "^3.6.2",
        "semantic-release": "^24.2.9",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.44.1",
        "vitest": "^3.2.4"
    }
}
